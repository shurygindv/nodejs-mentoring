{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "typeRoots" : ["./typings", "./node_modules/@types"],
    "paths": {
      "@libs/*": ["./libs/*"]
    }
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
